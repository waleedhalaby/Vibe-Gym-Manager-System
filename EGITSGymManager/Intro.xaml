<Window x:Class="EGITSGymManager.Intro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Intro" ResizeMode="NoResize" WindowStyle="None" Height="200" Width="300" WindowStartupLocation="CenterScreen" Background="#FFFEFF">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" ResizeBorderThickness="0" />
    </WindowChrome.WindowChrome>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Source="Assets/logo.png"/>
        <ProgressBar Name="ProgressBar" Grid.Row="1" Minimum="0" Maximum="100" VerticalAlignment="Bottom" Height="20"/>
    </Grid>
</Window>
